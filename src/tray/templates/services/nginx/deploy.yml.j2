apiVersion: v1
kind: Deployment
metadata:
  labels:
    app: magnify
    service: nginx
    version: "{{ magnify_nginx_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "magnify-nginx-{{ deployment_stamp }}"
  namespace: "{{ namespace_name }}"
spec:
  replicas: {{ magnify_nginx_replicas }}
  selector:
    matchLabels:
      app: magnify
      service: nginx
      version: "{{ magnify_nginx_image_tag }}"
      deployment: "magnify-nginx-{{ deployment_stamp }}"
      deployment_stamp: "{{ deployment_stamp }}"
  template:
    metadata:
      labels:
        app: magnify
        service: nginx
        version: "{{ magnify_nginx_image_tag }}"
        deployment: "magnify-nginx-{{ deployment_stamp }}"
        deployment_stamp: "{{ deployment_stamp }}"
    spec:
      # Prefer running pods on different nodes for redundancy
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: deployment
                  operator: In
                  values:
                  - "magnify-nginx-{{ deployment_stamp }}"
              topologyKey: kubernetes.io/hostname
{% set image_pull_secret_name = magnify_nginx_image_pull_secret_name | default(none) or default_image_pull_secret_name %}
{% if image_pull_secret_name is not none %}
      imagePullSecrets:
        - name: "{{ image_pull_secret_name }}"
{% endif %}
      containers:
        - image: "{{ magnify_nginx_image_name }}:{{ magnify_nginx_image_tag }}"
          name: nginx
          ports:
            - containerPort: 80
              protocol: TCP
          volumeMounts:
            - mountPath: /etc/nginx/conf.d
              name: magnify-v-nginx
              readOnly: true
{% if activate_http_basic_auth or magnify_activate_http_basic_auth %}
            - mountPath: "{{ http_basic_auth_user_file | dirname }}"
              name: magnify-htpasswd
{% endif %}

          livenessProbe:
            httpGet:
              path: "{{ magnify_nginx_healthcheck_endpoint }}"
              port: {{ magnify_nginx_healthcheck_port }}
            initialDelaySeconds: 60
            periodSeconds: 30
          readinessProbe:
            httpGet:
              path: "{{ magnify_nginx_healthcheck_endpoint }}"
              port: {{ magnify_nginx_healthcheck_port }}
            initialDelaySeconds: 10
            periodSeconds: 5
          resources: {{ magnify_nginx_resources }}
      securityContext:
        runAsUser: {{ container_uid }}
        runAsGroup: {{ container_gid }}
      volumes:
        - name: magnify-v-nginx
          configMap:
            name: magnify-nginx-{{ deployment_stamp }}
{% if activate_http_basic_auth or magnify_activate_http_basic_auth %}
        - name: magnify-htpasswd
          secret:
            secretName: "{{ magnify_nginx_htpasswd_secret_name }}"
{% endif %}
